<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.itakg.musicapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/notification"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/notification"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Splaash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity">
        </activity>

        <service android:name=".Services.PlaySongServices"
            />

        <activity android:name=".Activities.SingleSong">
        </activity>
    </application>

</manifest>